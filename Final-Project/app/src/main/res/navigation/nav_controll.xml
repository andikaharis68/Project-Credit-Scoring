<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_controll"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.andika.project_credit_scoring.presentation.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.andika.project_credit_scoring.presentation.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/transactionFragment"
        android:name="com.andika.project_credit_scoring.presentation.transaction.TransactionFragment"
        android:label="fragment_transaction"
        tools:layout="@layout/fragment_transaction" >
        <action
            android:id="@+id/action_transactionFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <action
        android:id="@+id/action_global_homeFragment"
        app:destination="@id/homeFragment" />
    <action
        android:id="@+id/action_global_transactionFragment"
        app:destination="@id/transactionFragment" />
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.andika.project_credit_scoring.presentation.account.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" >
        <action
            android:id="@+id/action_accountFragment_to_homeMasterFragment"
            app:destination="@id/homeMasterFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.andika.project_credit_scoring.presentation.history.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" >
        <action
            android:id="@+id/action_historyFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <action
        android:id="@+id/action_global_accountFragment"
        app:destination="@id/accountFragment" />
    <action
        android:id="@+id/action_global_historyFragment"
        app:destination="@id/historyFragment" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.andika.project_credit_scoring.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.andika.project_credit_scoring.presentation.login.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" />
    <action
        android:id="@+id/action_global_loginFragment"
        app:destination="@id/loginFragment" />
    <fragment
        android:id="@+id/homeMasterFragment"
        android:name="com.andika.project_credit_scoring.presentation.home.HomeMasterFragment"
        android:label="fragment_home_master"
        tools:layout="@layout/fragment_home_master" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.andika.project_credit_scoring.presentation.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <action
        android:id="@+id/action_global_homeMasterFragment"
        app:destination="@id/homeMasterFragment" />
    <fragment
        android:id="@+id/rolesFragment"
        android:name="com.andika.project_credit_scoring.presentation.roles.RolesFragment"
        android:label="RolesFragment" >
        <action
            android:id="@+id/action_rolesFragment_to_homeMasterFragment"
            app:destination="@id/homeMasterFragment" />
        <action
            android:id="@+id/action_rolesFragment_to_listRoleFragment"
            app:destination="@id/listRoleFragment" />
    </fragment>
    <action
        android:id="@+id/action_global_rolesFragment"
        app:destination="@id/rolesFragment" />
    <action
        android:id="@+id/action_global_profileFragment"
        app:destination="@id/profileFragment" />
    <fragment
        android:id="@+id/listRoleFragment"
        android:name="com.andika.project_credit_scoring.presentation.roles.ListRoleFragment"
        android:label="fragment_list_role"
        tools:layout="@layout/fragment_list_role" >
        <action
            android:id="@+id/action_listRoleFragment_to_homeMasterFragment"
            app:destination="@id/homeMasterFragment" />
    </fragment>
    <action
        android:id="@+id/action_global_listRoleFragment"
        app:destination="@id/listRoleFragment" />
</navigation>