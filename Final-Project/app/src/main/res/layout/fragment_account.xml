<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/account_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.account.AccountFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh_account"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/red_shape"
            android:orientation="vertical"
            android:paddingVertical="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_back" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/poppins_med"
                    android:text="Management Account"
                    android:textColor="@color/white"
                    android:textSize="23sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/white_roundshape"
        android:elevation="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_verified"
            android:layout_width="match_parent"
            android:layout_height="35.3dp"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:background="@drawable/white_roundshape"
            android:fontFamily="@font/poppins_med"
            android:gravity="center"
            android:text="Verified"
            android:textSize="13.3sp" />

        <TextView
            android:id="@+id/text_all"
            android:layout_width="270dp"
            android:layout_height="35.3dp"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:background="@drawable/red_roundshape"
            android:fontFamily="@font/poppins_med"
            android:gravity="center"
            android:text="All"
            android:textColor="@color/white"
            android:textSize="13.3sp" />

        <TextView
            android:id="@+id/text_not_verified"
            android:layout_width="match_parent"
            android:layout_height="35.3dp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:background="@drawable/white_roundshape"
            android:fontFamily="@font/poppins_med"
            android:gravity="center"
            android:text="Not Verivied"
            android:textSize="13.3sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/round_corner_grey"
        android:orientation="vertical"
        android:paddingTop="15dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingHorizontal="10dp"
                app:layout_constraintVertical_bias="0.083" />
        </ScrollView>

        <TextView
            android:id="@+id/btn_add_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_med"
            android:text="+ Add Account"
            android:textSize="17dp" />
    </LinearLayout>
</FrameLayout>