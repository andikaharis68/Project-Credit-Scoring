<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/account_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintCircleRadius="10dp"
    tools:context=".presentation.account.AccountFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="15dp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/round_corner_stroke_bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextView.PoppinsMed16spRed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_weight="1"
                        android:text="Data Customer"/>

                    <ImageView
                        android:id="@+id/dialog_btn_close"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/cross"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/male"/>

                    <TextView
                        android:id="@+id/dialog_text_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_med"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:text="Moch Andika Haris"
                        android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/message"/>

                    <TextView
                        android:id="@+id/dialog_text_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_med"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:text="andikaharis68@gmail.com"
                        android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/idcard"/>

                    <TextView
                        android:id="@+id/dialog_text_identity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_med"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:text="3572022110960001"
                        android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/address"/>

                    <TextView
                        android:id="@+id/dialog_text_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_med"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:text="Perum. Griya Tanggung Asri B.29, Surabaya"
                        android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/united"/>

                    <TextView
                        android:id="@+id/dialog_text_status_employee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_med"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:text="Non Employee"
                        android:textSize="14sp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:background="@drawable/round_corner_stroke2">

                <TextView
                    style="@style/TextView.PoppinsMed16spRed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transaction"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:fontFamily="@font/poppins_med"
                            android:textColor="@color/dark_blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Income"/>

                        <TextView
                            android:id="@+id/dialog_text_income"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_med"
                            android:text="Rp. 5000000"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:fontFamily="@font/poppins_med"
                            android:textColor="@color/dark_blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Outcome"/>

                        <TextView
                            android:id="@+id/dialog_text_outcome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_med"
                            android:text="Rp. 3000000"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:fontFamily="@font/poppins_med"
                            android:textColor="@color/dark_blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loan Amount"/>

                        <TextView
                            android:id="@+id/dialog_text_loan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_med"
                            android:text="Rp. 2500000"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingHorizontal="10dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <com.budiyev.android.circularprogressbar.CircularProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        app:animateProgress="true"
                        app:backgroundStrokeColor="@color/dark_blue"
                        app:backgroundStrokeWidth="8dp"
                        app:drawBackgroundStroke="false"
                        app:foregroundStrokeCap="butt"
                        app:foregroundStrokeColor="@color/red_fruchsia"
                        app:foregroundStrokeWidth="5dp"
                        app:indeterminate="false"
                        app:indeterminateRotationAnimationDuration="12000"
                        app:indeterminateSweepAnimationDuration="11600"
                        app:indeterminateMinimumAngle="45"
                        app:maximum="100"
                        app:progress="50"
                        app:progressAnimationDuration="100"
                        app:startAngle="0"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/dark_blue"
                            android:layout_weight="1"
                            android:text="Credit Rate   "
                            android:fontFamily="@font/poppins_med"/>

                        <TextView
                            android:id="@+id/dialog_text_credit_ratio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="50 %"
                            android:fontFamily="@font/poppins_med"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="40dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/dark_blue"
                                android:textSize="15sp"
                                android:text="Interest"
                                android:fontFamily="@font/poppins_med"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/dark_blue"
                                android:textSize="15sp"
                                android:text="Rate"
                                android:fontFamily="@font/poppins_med"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/dialog_text_interest_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="28sp"
                            android:textColor="@color/red_fruchsia"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:textAlignment="textEnd"
                            android:text="5%"
                            android:fontFamily="@font/poppins_med"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Installment          :"
                            android:fontFamily="@font/poppins_med"
                            android:textColor="@color/dark_blue"
                            android:textSize="15sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Installment :"
                            android:fontFamily="@font/poppins_med"
                            android:textColor="@color/dark_blue"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingHorizontal="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/dialog_text_installment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3000000"
                            android:fontFamily="@font/poppins_med"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/dialog_text_total_installment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4500000"
                            android:fontFamily="@font/poppins_med"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:paddingLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_blue"
                            android:text="Tenor"
                            android:textSize="15sp"
                            android:fontFamily="@font/poppins_med"/>

                        <TextView
                            android:id="@+id/dialog_text_tenor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:text="6 month"
                            android:fontFamily="@font/poppins_med"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:paddingRight="5dp"
                    android:paddingLeft="10dp"
                    android:paddingVertical="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:background="@drawable/round_corner_stroke_top">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/dark_blue"
                            android:text="Financial Criteria :"
                            android:fontFamily="@font/poppins_med"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="15sp"
                            android:textColor="@color/dark_blue"
                            android:text="Employee Criteria :"
                            android:fontFamily="@font/poppins_med"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="15sp"
                            android:textColor="@color/dark_blue"
                            android:text="Submited Date :"
                            android:fontFamily="@font/poppins_med"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="15sp"
                            android:textColor="@color/dark_blue"
                            android:text="Approved Date :"
                            android:fontFamily="@font/poppins_med"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/dialog_text_financial_criteria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/blue_green"
                            android:text="Pass"
                            android:fontFamily="@font/poppins_med"/>

                        <TextView
                            android:id="@+id/dialog_text_employee_criteria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="15sp"
                            android:textColor="@color/red_fruchsia"
                            android:text="Not Pass"
                            android:fontFamily="@font/poppins_med"/>

                        <TextView
                            android:id="@+id/dialog_text_date_submited"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="14sp"
                            android:text="21-12-2020"
                            android:fontFamily="@font/poppins_med"/>

                        <TextView
                            android:id="@+id/dialog_text_date_approved"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:textSize="14sp"
                            android:text="02-10-2021"
                            android:fontFamily="@font/poppins_med"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:paddingHorizontal="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/round_corner_stroke_top">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:text="REPORT"
                        android:textColor="@color/red_fruchsia"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="15sp"/>

                    <ImageView
                        android:id="@+id/dialog_image_approval"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/approved"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:id="@+id/dialog_history_text_submitter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Andika Haris"
                        android:textColor="@color/dark_blue"
                        android:fontFamily="@font/poppins_med"
                        android:textSize="14sp"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>