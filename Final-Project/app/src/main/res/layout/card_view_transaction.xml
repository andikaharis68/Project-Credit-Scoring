<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:shadow="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_transaction"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="ContentDescription"
            android:elevation="4dp"
            android:background="@drawable/round_corner_white"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13.3dp"
                    android:layout_marginLeft="11.7dp"
                    android:layout_marginRight="13dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/card_text_name"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:text="Moch Andika Haris"/>

                    <TextView
                        android:id="@+id/card_text_loan"
                        android:fontFamily="@font/poppins_med"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14.3sp"
                        android:layout_weight="1"
                        android:textColor="#1faef3"
                        android:gravity="right"
                        android:text="Rs. 5200000"
                        />


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.7dp"
                    android:layout_marginTop="10.3dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="#efefef"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13.7dp"
                    android:layout_marginLeft="11dp"
                    android:paddingHorizontal="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:fontFamily="@font/poppins_med"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11.7sp"
                            android:textColor="#4b4949"
                            android:text="Income"
                            />


                        <TextView
                            android:id="@+id/card_text_income"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="11.7sp"
                            android:textColor="#a9a9a9"
                            android:layout_marginTop="3dp"
                            android:text="Rp. 5000000"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/duration"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13.3sp"
                            android:textColor="#4b4949"
                            android:text="Credit Ratio"
                            />


                        <TextView
                            android:id="@+id/card_text_ratio"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:textColor="#1faef3"
                            android:text="30%"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_marginRight="13.3dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:fontFamily="@font/poppins_med"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11.7sp"
                            android:textColor="#4b4949"
                            android:text="Outcome"
                            />


                        <TextView
                            android:id="@+id/card_text_outcome"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11.7sp"
                            android:textColor="#a9a9a9"
                            android:layout_marginTop="3dp"
                            android:text="Rp. 2000000"

                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginBottom="5dp"
                    android:paddingHorizontal="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:fontFamily="@font/poppins_med"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11.7sp"
                            android:textColor="#4b4949"
                            android:text="Employee Criteria"
                            />


                        <TextView
                            android:id="@+id/card_text_employee_criteria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="13sp"
                            android:textColor="@color/blue_green"
                            android:text="Pass"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_marginRight="13.3dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:fontFamily="@font/poppins_med"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11.7sp"
                            android:textColor="#4b4949"
                            android:text="Financial Criteria"
                            />


                        <TextView
                            android:id="@+id/card_text_financial_criteria"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="@color/red_fruchsia"
                            android:text="Not Pass"

                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/card_image_status"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/approved"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="-120dp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>